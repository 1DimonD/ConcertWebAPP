@model IEnumerable<ConcerWebAPP.Models.Tour>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name_tour)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name_tour)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.tour_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.tour_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.tour_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
