@page
@model ConcerWebAPP.Pages.ConcertsModel

<!DOCTYPE html>
<html>
<head>    
    <meta charset="utf-8" />
    <link href="~/css/Table.css" rel="stylesheet">
    <title>Концерти</title>
</head>
<body class="Body">
    <table class="add_edit_table">
        <tr class="tr1">
            <td colspan="2" class="td1">
                <h4>Додати концерт</h4>
            </td>            
        </tr>
        <tr class="tr1">
            <td class="td1">
                <form action="javascript:void(0);" method="POST" onsubmit="addConcert()">
                    <input type="text" id="add-name" placeholder="Назва"/>
                    <input type="text" id="add-genre" placeholder="Жанр"/>
                    <br />
                    <select id="add_artist" asp-items="@Model.ArtistsOptions">
                        <option></option>
                    </select>
                    <br />
                    <input type="date" id="add-date"/>
                    <br />
                    <input type="submit" value="Додати" />
                </form>
            </td>
        </tr>
        <tr class="tr1">
            <td class="td1">
                <h5>Редагувати інформацію про концерт</h5>
            </td>
         </tr>
         <tr class="tr1">
            <td class="td1">
                <div id="editConcert">                    
                    <form action="javascript:void(0);" onsubmit="updateConcert()">
                        <input type="hidden" id="edit-id" />
                        <input type="text" id="edit-name" />
                        <input type="text" id="edit-genre" />
                        <br />
                        <input type="date" id="edit-date" />
                        <br />
                        <select id="edit_artist" asp-items="@Model.ArtistsOptions">
                            <option></option>
                        </select>
                        <br />
                        <input type="submit" value="Зберегти" />
                        <a onclick="closeInput()" aria-label="Close">&times;</a>
                    </form>
                </div>
            </td>
        </tr>        
    </table>

    <table>
        <tr>
            <th>Назва</th>
            <th>Жанр</th>
            <th>Дата</th>
            <th>Артист</th>
        </tr>
        <tbody id="concerts"></tbody>
    </table>

    <script src="js/Concerts.js" asp-append-version="true"></script>
    <script type="text/javascript">
        getConcerts();
    </script>
</body>
</html>
