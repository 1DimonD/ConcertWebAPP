<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ConcerWebAPP</title>    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap_my.min.css" />
    <link rel="stylesheet" href="~/css/SideMenu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/js/site.js" asp-append-version="true" />
    <link rel="stylesheet" href="~/ConcerWebAPP.styles.css" asp-append-version="true" />
</head>
<body style="background: linear-gradient(#2c3e50,#3e96b2, #9198e5, #2c3e50);">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
          <div class="container-fluid">

            <div id="mySidenav" class="sidenav">
               <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
               <a href="#">About</a>
               <a href="#">Services</a>
               <a href="#">Clients</a>
               <a href="#">Contact</a>
            </div>
            <span style="font-size:30px;cursor:pointer" class="nav-link" onclick="openNav()">&#9776; Меню</span>  

            <div class="collapse navbar-collapse" id="navbarColor01">
              <ul class="navbar-nav me-auto">
                <li class="nav-item">
                  <a class="nav-link" asp-page="/Index">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" asp-page="/Artists">Артисти</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" asp-page="/Songs">Пісні</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" asp-page="/Concerts">Концерти</a>
                </li>     
                <li class="nav-item">
                  <a class="nav-link" asp-page="#">Секції</a>
                </li>
              </ul>
            </div>
          </div>
        </nav>        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ConcertWebApi - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
               }
    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
               }
</script>