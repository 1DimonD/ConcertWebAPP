@page
@model ConcerWebAPP.Pages.SectionsModel

<!DOCTYPE html>
<html>
<head>    
    <meta charset="utf-8" />
    <link href="~/css/Table.css" rel="stylesheet">
    <title>Секції</title>
</head>
<body class="Body">
    <table class="add_edit_table">
        <tr class="tr1">
            <td colspan="2" class="td1">
                <h4>Додати секцію</h4>
            </td>            
        </tr>
        <tr class="tr1">
            <td class="td1">
                <form action="javascript:void(0);" method="POST" onsubmit="addSection()">
                    <input type="text" id="add-name" placeholder="Назва"/>
                     <input type="text" id="add-tnumber" placeholder="Кількість білетів"/>
                     <input type="text" id="add-price" placeholder="Ціна за білет"/>
                    <input type="submit" value="Додати" />
                </form>
            </td>
        </tr>
        <tr class="tr1">
            <td class="td1">
                <h5>Редагувати інформацію про секцію</h5>
            </td>
         </tr>
         <tr class="tr1">
            <td class="td1">
                <div id="editSection">               
                    <form action="javascript:void(0);" onsubmit="updateSection()">
                        <input type="hidden" id="edit-id" />
                        <input type="text" id="edit-name" />
                        <input type="text" id="edit-tnumber" />
                        <input type="text" id="edit-price" />
                        <input type="submit" value="Зберегти" />
                        <a onclick="closeInput()" aria-label="Close">&times;</a>
                    </form>
                </div>
            </td>
        </tr>        
    </table>

    <table>
        <tr>
            <th>Назва</th>
            <th>Кількість білетів</th>
            <th>Ціна за білет</th>
        </tr>
        <tbody id="sections"></tbody>
    </table>

    <script src="js/Sections.js" asp-append-version="true"></script>
    <script type="text/javascript">
        getSections();
    </script>
</body>
</html>

